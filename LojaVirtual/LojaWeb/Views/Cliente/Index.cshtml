@model IEnumerable<LojaWeb.Models.ClienteViewModel>

@{
    ViewData["Title"] = "Lista de Clientes";
    int cont = 0;
}

<h1>Lista de Clientes</h1>

<p>
    <a asp-action="Create">Criar Cliente</a>
</p>
<partial name="_mensagensPartial" />

<table class="table" id="tabelaClientes">
    <thead>
        <tr>
            <th>índice</th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            cont++;
            <tr>
                <td>@cont</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Detallhes", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Excluir", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{ 
<script>
    $(document).ready(function () {
        $('#tabelaClientes').DataTable(
            { "language": { "url":"//cdn.datatables.net/plug-ins/1.11.3/i18n/pt_br.json"}}
        );
    });
</script>

}